<?xml version="1.0" encoding="utf-8"?>
<CatapultSkin
  Version="3"
  SkinType="Component"
  Comment="HTML5 Toolbar skin"
  ComponentType="TopicToolbar"
  EnableResponsiveOutput="True">
  <Stylesheet>
    <Styles>
      <Style
        Name="ToolbarItem">
        <Properties>
          <Property
            Name="BackgroundGradient">vertical transparent transparent</Property>
          <Property
            Name="BorderTopLeftRadius">3px</Property>
          <Property
            Name="BoxShadowVShadow">0px</Property>
          <Property
            Name="BackgroundColor">var(--Light)</Property>
          <Property
            Name="BorderLeft">solid 1px var(--Light)</Property>
          <Property
            Name="BorderRight">solid 1px var(--Light)</Property>
          <Property
            Name="BorderTop">solid 1px var(--Light)</Property>
          <Property
            Name="BorderBottom">solid 1px var(--Light)</Property>
          <Property
            Name="BoxShadowColor">var(--Lightest)</Property>
          <Property
            Name="Color">var(--Darkest)</Property>
        </Properties>
        <Classes>
          <StyleClass
            Name="Print">
            <Properties>
              <Property
                Name="BorderTopLeftRadius">3px</Property>
            </Properties>
          </StyleClass>
          <StyleClass
            Name="CurrentTopicIndex">
            <Properties>
              <Property
                Name="TextShadowColor">var(--Lightest)</Property>
              <Property
                Name="Color">var(--Dark)</Property>
            </Properties>
          </StyleClass>
          <StyleClass
            Name="TopicRatings">
            <Properties>
              <Property
                Name="BoxShadowColor">var(--Lightest)</Property>
            </Properties>
          </StyleClass>
          <StyleClass
            Name="TopicRatingsEmpty">
            <Properties>
              <Property
                Name="BoxShadowColor">var(--Lightest)</Property>
            </Properties>
          </StyleClass>
        </Classes>
      </Style>
      <Style
        Name="Toolbar">
        <Properties>
          <Property
            Name="Float">right</Property>
        </Properties>
      </Style>
      <Style
        Name="Toolbar Button Separator">
        <Properties>
          <Property
            Name="Color">var(--Light)</Property>
        </Properties>
      </Style>
      <Style
        Name="Toolbar Button Drop-down">
        <Properties>
          <Property
            Name="BackgroundColor">var(--Lightest)</Property>
          <Property
            Name="Color">var(--Dark)</Property>
        </Properties>
        <Classes>
          <StyleClass
            Name="SelectLanguageDropDownItemHover">
            <Properties>
              <Property
                Name="BackgroundColor">var(--Light)</Property>
              <Property
                Name="Color">var(--Darkest)</Property>
            </Properties>
          </StyleClass>
          <StyleClass
            Name="SelectSkinDropDownItemHover">
            <Properties>
              <Property
                Name="BackgroundColor">var(--Light)</Property>
              <Property
                Name="Color">var(--Darkest)</Property>
            </Properties>
          </StyleClass>
        </Classes>
      </Style>
    </Styles>
  </Stylesheet>
  <TopicToolbar
    EnableCustomLayout="true"
    Buttons="PreviousTopic|NextTopic|Separator|Print|ExpandAll" />
  <Strings />
</CatapultSkin>